{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": false, // Cambiato a false per essere più permissivo
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting - Tutti disabilitati */
    "strict": false, // Disabilita tutti i controlli rigorosi
    "noUnusedLocals": false, // Consente variabili locali non utilizzate
    "noUnusedParameters": false, // Consente parametri non utilizzati
    "noFallthroughCasesInSwitch": false, // Ignora errori di fallthrough negli switch
    "noUncheckedSideEffectImports": false, // Disabilita controlli su import con side effects

    /* Opzioni aggiuntive per ignorare errori */
    "noImplicitAny": false, // Consente l'uso di 'any' implicito
    "strictNullChecks": false, // Disabilita i controlli rigorosi su null/undefined
    "suppressImplicitAnyIndexErrors": true, // Ignora errori di indicizzazione con 'any'
    "allowJs": true, // Consente file JavaScript
    "checkJs": false, // Non verifica errori nei file JavaScript
    "useUnknownInCatchVariables": false, // Usa 'any' invece di 'unknown' nei blocchi catch
    "exactOptionalPropertyTypes": false, // Controlli meno rigorosi sulle proprietà opzionali
    "noUncheckedIndexedAccess": false, // Consente accesso senza controlli agli indici
    "noErrorTruncation": true // Mostra errori completi senza troncarli (aiuta nel debug)
  },
  "include": ["vite.config.ts"]
}
